{
  "name": "apie/graphql",
  "description": "Composer package of the apie library: graphql",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pieter Jordaan",
      "email": "pieter_jordaan@hotmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Apie\\Graphql\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Apie\\Tests\\Graphql\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "apie/core": "self.version",
    "nyholm/psr7": "^1.8.2",
    "webonyx/graphql-php": "^15.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5.2",
    "phpspec/prophecy-phpunit": "^2.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}